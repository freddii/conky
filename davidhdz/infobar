	template2 = [[${color}${exec MAXVALUE=$(cat $(ls /sys/class/backlight/*/max_brightness)) && VALUE=$(cat $(ls /sys/class/backlight/*/brightness)) && echo $(( $VALUE * 100 / $MAXVALUE))}%]],
